# ============================================================
# AI INVIGILATOR - ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================

# ------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------
# Flask environment: development, production, or testing
FLASK_ENV=development

# Secret key for session encryption and CSRF protection
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-with-python-secrets

# ------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------
# LOCAL DEVELOPMENT (SQLite - no setup needed):
# Leave DATABASE_URL empty or use: sqlite:///ai_invigilator.db

# PRODUCTION (PostgreSQL - required for deployment):
# Railway: postgresql://user:password@host:port/database
# Render: postgresql://user:password@host:port/database
# Local PostgreSQL: postgresql://postgres:password@localhost:5432/ai_invigilator
DATABASE_URL=postgresql://user:password@localhost:5432/ai_invigilator

# Alternative: Separate dev database (optional)
DEV_DATABASE_URL=sqlite:///ai_invigilator_dev.db

# Production database pool settings (PostgreSQL only)
# Adjust based on your server capacity and expected load
DB_POOL_SIZE=10          # Number of persistent connections
DB_MAX_OVERFLOW=20       # Extra connections allowed during spikes
DB_POOL_TIMEOUT=30       # Seconds to wait for available connection
DB_POOL_RECYCLE=1800     # Recycle connections after 30 minutes

# ------------------------------------------------------------
# EMAIL CONFIGURATION (Gmail example)
# ------------------------------------------------------------
# For Gmail: Enable 2FA and create an App Password
# Visit: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ------------------------------------------------------------
# SMS CONFIGURATION (Africa's Talking)
# ------------------------------------------------------------
# Sign up at: https://africastalking.com
# Get API key from: https://cloud.africastalking.com/#/settings/api
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=AI_INVIGILATOR

# ------------------------------------------------------------
# SECURITY SETTINGS
# ------------------------------------------------------------
# Salt for password hashing (generate like SECRET_KEY)
SECURITY_PASSWORD_SALT=your-security-salt-here

# ------------------------------------------------------------
# CAMERA SETTINGS
# ------------------------------------------------------------
# Default camera index (0 = default webcam)
CAMERA_INDEX=0

# ------------------------------------------------------------
# EXAM SETTINGS
# ------------------------------------------------------------
# Number of tab switches before triggering alert
TAB_SWITCH_THRESHOLD=3

# ------------------------------------------------------------
# RATE LIMITING
# ------------------------------------------------------------
# Use Redis for production: redis://localhost:6379/0
# Keep memory for development
RATELIMIT_STORAGE_URL=memory://

# ------------------------------------------------------------
# FILE STORAGE
# ------------------------------------------------------------
# Path for student photos (relative to app root)
STUDENT_PHOTOS_PATH=student_photos

# ------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------------------------------------------------
# STRIPE PAYMENT (Optional - for premium features)
# ------------------------------------------------------------
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ------------------------------------------------------------
# DEPLOYMENT PLATFORM EXAMPLES
# ------------------------------------------------------------
# Railway.app: Add all variables in Railway Dashboard > Variables
# Render.com: Add all variables in Render Dashboard > Environment
# Heroku: Use config vars: heroku config:set KEY=value
# 
# For these platforms, set DATABASE_URL automatically provided
# ============================================================
